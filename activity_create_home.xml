<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@color/colorwhite"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        tools:context="com.sidalitechnologies.realestate.CreateHome">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="16dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@mipmap/backcontractor"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize"
                    android:src="@mipmap/iccreatehome"
                    android:layout_gravity="center"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Create Your Home"
                    android:gravity="center"
                    android:textColor="@color/colorwhite"
                    android:textSize="20dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#E6E4E7"
            android:text="Step 1"
            android:textSize="18dp"
            android:textStyle="bold"/>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="#E6E4E7"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:padding="0dp"
                    android:background="#ffffff"
                    android:id="@+id/liestimation"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="100dp"
                        android:scaleType="fitXY"
                        android:layout_height="80dp"
                        android:background="@drawable/estimate_bg"
                        />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textColor="#000000"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:text="Estimation"
                        android:gravity="center"
                        />
                    <Button
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:background="@drawable/btnbacktwo"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:text="See More"
                        android:textSize="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/listructuraldesign"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:background="#ffffff"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:background="@drawable/structural_db"
                        android:scaleType="fitXY" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Structural Design"
                        android:textColor="#000000"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <Button
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/btnbacktwo"
                        android:text="See More"
                        android:textColor="#000000"
                        android:textSize="10dp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="#E6E4E7"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:padding="0dp"
                    android:id="@+id/lilabour"
                    android:layout_marginLeft="30dp"
                    android:background="#ffffff"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:scaleType="fitXY"
                        android:background="@drawable/labour_bg"
                        />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textColor="#000000"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:background="#ffffff"
                        android:text="Labour"
                        android:gravity="center"
                        />
                    <Button
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:background="@drawable/btnbacktwo"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:text="See More"
                        android:textSize="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:id="@+id/librickssand"
                    android:layout_marginRight="30dp"
                    android:background="#ffffff"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:scaleType="fitXY"
                        android:background="@drawable/brick_bg"
                        />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textColor="#000000"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:background="#ffffff"
                        android:text="Bricks and Sand"
                        android:gravity="center"
                        />
                    <Button
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:background="@drawable/btnbacktwo"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:text="See More"
                        android:textSize="10dp"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Step 2"
            android:textSize="18dp"
            android:background="#E6E4E7"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E6E4E7"
            android:padding="16dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:padding="0dp"
                    android:id="@+id/listeelprovider"
                    android:layout_marginLeft="30dp"
                    android:background="#ffffff"

                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="100dp"
                        android:scaleType="fitXY"
                        android:layout_height="80dp"
                        android:background="@drawable/steel_bg"
                        />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textColor="#000000"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:text="Steel Provider"
                        android:background="#ffffff"
                        android:gravity="center"
                        />
                    <Button
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:background="@drawable/btnbacktwo"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:text="See More"
                        android:textSize="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:id="@+id/lislabprovider"
                    android:background="#ffffff"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:scaleType="fitXY"
                        android:background="@drawable/slab_bg"
                        />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textColor="#000000"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:background="#ffffff"
                        android:text="Slab Contractor"
                        android:gravity="center"
                        />
                    <Button
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:background="@drawable/btnbacktwo"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:text="See More"
                        android:textSize="10dp"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E6E4E7"
            android:padding="16dp"
            android:orientation="vertical"></LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Step 3"
            android:textSize="18dp"
            android:background="#E6E4E7"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="#E6E4E7"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:padding="2dp"
                    android:background="#ffffff"
                    android:id="@+id/lipainter"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="100dp"
                        android:scaleType="fitXY"
                        android:layout_height="80dp"
                        android:background="@mipmap/backplane"
                        />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textColor="#000000"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:text="Painter"
                        android:gravity="center"
                        />
                    <Button
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:background="@drawable/btnbacktwo"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:text="See More"
                        android:textSize="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:background="#ffffff"
                    android:id="@+id/licarpenter"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:scaleType="fitXY"
                        android:background="@mipmap/backplane"
                        />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textColor="#000000"
                        android:padding="10dp"
                        android:background="#ffffff"
                        android:textStyle="bold"
                        android:text="Carpenters"
                        android:gravity="center"
                        />
                    <Button
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:background="@drawable/btnbacktwo"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:text="See More"
                        android:textSize="10dp"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="#E6E4E7"

            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:padding="2dp"
                    android:background="#ffffff"
                    android:id="@+id/lialuminium"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:scaleType="fitXY"
                        android:background="@mipmap/backplane"
                        />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:background="#ffffff"
                        android:textColor="#000000"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:text="Alimnimum"
                        android:gravity="center"
                        />
                    <Button
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:background="@drawable/btnbacktwo"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:text="See More"
                        android:textSize="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:id="@+id/liglassprovider"
                    android:layout_marginRight="30dp"
                    android:background="#ffffff"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:scaleType="fitXY"
                        android:background="@mipmap/backplane"
                        />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textColor="#000000"
                        android:padding="10dp"
                        android:background="#ffffff"
                        android:textStyle="bold"
                        android:text="Glass Provider"
                        android:gravity="center"
                        />
                    <Button
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:background="@drawable/btnbacktwo"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:text="See More"
                        android:textSize="10dp"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Step 4"
            android:textSize="18dp"
            android:background="#E6E4E7"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E6E4E7"
            android:padding="16dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:padding="2dp"
                    android:id="@+id/lifurniture"
                    android:layout_marginLeft="30dp"
                    android:background="#ffffff"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="100dp"
                        android:scaleType="fitXY"
                        android:layout_height="80dp"
                        android:background="@mipmap/backplane"
                        />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textColor="#000000"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:background="#ffffff"
                        android:text="Furniture"
                        android:gravity="center"
                        />
                    <Button
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:background="@drawable/btnbacktwo"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:text="See More"
                        android:textSize="10dp"/>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lisenatorydis"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:background="#ffffff"
            android:orientation="vertical"
            android:padding="2dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:background="@mipmap/backplane"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center"
                android:padding="10dp"
                android:text="Senatory Distributer"
                android:textColor="#000000"
                android:textSize="10dp"
                android:textStyle="bold" />

            <Button
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/btnbacktwo"
                android:text="See More"
                android:textColor="#000000"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/liplumber"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:background="#ffffff"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:background="@mipmap/backplane"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center"
                android:padding="10dp"
                android:text="Plumber"
                android:textColor="#000000"
                android:textSize="10dp"
                android:textStyle="bold" />

            <Button
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/btnbacktwo"
                android:text="See More"
                android:textColor="#000000"
                android:textSize="10dp" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
