<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coloragainprimary"
    android:orientation="vertical"
    tools:context="com.sidalitechnologies.realestate.DistributerProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="14dp"
            android:text="Distributer Profile"
            android:textColor="@color/colorwhite"
            android:textSize="16dp"
            android:textStyle="bold" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:orientation="horizontal">
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <ImageView
                  android:layout_width="120dp"
                  android:layout_height="100dp"
                  android:scaleType="fitXY"
                  android:id="@+id/imvdprofile"
                  android:background="@drawable/upic"
                  android:layout_gravity="center"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:layout_marginLeft="140dp"
                  android:text="User Name"
                  android:id="@+id/tvudisname"
                  android:textColor="@color/colorwhite"
                  android:textSize="13dp"
                  android:textStyle="bold"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:layout_marginLeft="140dp"
                  android:layout_marginTop="40dp"
                  android:id="@+id/tvudiscell"
                  android:text="0322-4379402"
                  android:textColor="@color/colorwhite"
                  android:textSize="13dp"
                  android:textStyle="bold"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:layout_marginLeft="140dp"
                  android:id="@+id/tvudismail"
                  android:layout_marginTop="80dp"
                  android:text="alimirza00@gmail.com"
                  android:textColor="@color/colorwhite"
                  android:textSize="13dp"
                  android:textStyle="bold"
                  />
          </RelativeLayout>
       </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:hint="Company Name"
                android:inputType="text"
                android:id="@+id/edtdiscname"
                android:textSize="13dp"
                android:drawableLeft="@drawable/icperson"
                android:drawablePadding="10dp"
                android:textColor="@color/colorwhite"
                android:textColorHint="@color/colorlight"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:hint="Company Address"
                android:id="@+id/edtdiscaddress"
                android:inputType="text"
                android:textSize="13dp"
                android:drawableLeft="@drawable/ic_action_name"
                android:drawablePadding="10dp"
                android:textColor="@color/colorwhite"
                android:textColorHint="@color/colorlight"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:hint="Company Phone(Optional)"
                android:inputType="phone"
                android:textSize="13dp"
                android:id="@+id/edtdiscphone"
                android:drawableLeft="@drawable/icphone"
                android:drawablePadding="10dp"
                android:textColor="@color/colorwhite"
                android:textColorHint="@color/colorlight"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/spindiscarea"
                android:padding="10dp">

            </Spinner>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:drawableLeft="@drawable/icperson"
                android:drawablePadding="10dp"
                android:hint="Company CEO"
                android:id="@+id/edtdiscnameceo"
                android:textSize="13dp"
                android:textColor="@color/colorwhite"
                android:textColorHint="@color/colorlight" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:hint="Company CEO Phone(Optional)"
                android:inputType="phone"
                android:textSize="13dp"
                android:id="@+id/edtdiscphoneceo"
                android:drawableLeft="@drawable/icphone"
                android:drawablePadding="10dp"
                android:textColor="@color/colorwhite"
                android:textColorHint="@color/colorlight"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:hint="Company Description"
                android:lines="4"
                android:id="@+id/edtdiscdes"
                android:textSize="13dp"
                android:drawablePadding="10dp"
                android:textColor="@color/colorwhite"
                android:textColorHint="@color/colorlight"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/spinnermatone"
                android:padding="10dp"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/spinnermattwo"
                android:visibility="gone"
                android:padding="10dp">
            </Spinner>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btndiscsave"
                android:background="@drawable/btnbacktwo"
                android:textColor="@color/colorwhite"
                android:text="Save Profile"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
